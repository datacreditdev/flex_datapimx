<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="358" height="172">
	
	<mx:Validator id="codigoV" source="{txtCodigo}" property="text" 
	invalid="{txtCodigo.setFocus()}" triggerEvent="" requiredFieldError="Codigo Requerido"/>
	
	<mx:Validator id="nombreV" source="{txtNombre}" property="text" 
	invalid="{txtNombre.setFocus()}" triggerEvent="" requiredFieldError="Instituci贸n Requerida"/>
	
	<mx:Script>
		<![CDATA[
		import Data.DatosTipoProd;
		import Data.EventTipoProd;
		import Data.Globales;
		import Data.Utils;
		import mx.collections.ArrayCollection;
		import mx.controls.Alert;
		import mx.core.Application;
		import mx.effects.*;
		import mx.events.EffectEvent;
		import mx.managers.PopUpManager;	
		import mx.rpc.events.ResultEvent;
		import mx.rpc.soap.WebService;
		import mx.validators.Validator;	
		
		[Bindable]
		private var info:DatosTipoProd;
		[Bindable]
		private var _xmlTPC:XML =  new XML();
		
		public var openEffect:Effect = new WipeDown();
		public var closeEffect:Effect = new WipeDown();
		public var wsMS:WebService;	
		public var tipoAccion:int;
		public var titulo:String;
		
		private var du:Utils;
		private var global:Globales;
		
		public function cargaInfoTipoProd(cdgTPC:String, tipoProd:String):void{
			tipoAccion = 2; 
			this.title = "Edici贸n";
			
			info = new DatosTipoProd();
			//Datos del tipo de Producto
			info.cdgTPC = cdgTPC;
			info.nombreTPC = tipoProd;
			
			llenaRegistros();
		}
		
		public function cerrar():void{
			var playReverse:Boolean = true;   
            closeEffect.duration = 500;
            closeEffect.play([this], playReverse);
            closeEffect.addEventListener(EffectEvent.EFFECT_END, terminarEfecto);
		}
	
		public function enviar():void{
			info = new DatosTipoProd();
				
			var invalidArray:Array = Validator.validateAll([nombreV]);
				
			if(invalidArray.length == 0){	
				info.cdgTPC = txtCodigo.text;
				info.nombreTPC = txtNombre.text;
				info.guarda = true;
			}
			else{
				info.guarda = false;
			}
			validaFinal();
		}
		
		public function guardaTipoProd():void{
			initConexion();
			du.sCursor();
			global.bloquear();
			wsMS.addEventListener(ResultEvent.RESULT, setAccionTipoProd);
			wsMS.setAccionTipoProd.send(tipoAccion, info.cdgTPC, info.nombreTPC);	
		}
	
		public function init():void{
			global = new Globales();
			du = new Utils(); 
			titulo = "Mantenimiento de Tipo de Producto";
			//Codigo que permite ejecutar el efecto de apertura
			openEffect.duration = 1000;
			openEffect.play([this]);
		}
		
		public function initConexion():void{				
			wsMS = new WebService();			
			wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
			wsMS.loadWSDL();
		}	
		
		public function llenaRegistros():void{
			txtCodigo.setFocus();
			txtCodigo.editable = false;
			
			txtCodigo.text = info.cdgTPC;
			txtNombre.text = info.nombreTPC;
		}
			
		public function registraInfoProd():void{
			tipoAccion = 1;
			this.title = "Nuevo";
			info = null;
			
			txtNombre.setFocus();
		}
		
		private function setAccionTipoProd(event:ResultEvent):void{
			wsMS.disconnect();
			du.rCursor();
			global.desbloquear();
			wsMS.removeEventListener(ResultEvent.RESULT, setAccionTipoProd);
			var res:String = event.result.toString();
			var codigo:String;
			if (res.substr(0,1) == "1"){
				if(tipoAccion == 1){
					var rSplit:Array = res.toString().split('|');
					codigo = rSplit[1].toString();
					du.mostrarMensaje("Registro exitoso de tipo de producto con el c贸digo - " + codigo, titulo, 4, null, null, global.iInfo);
				}
				cerrar();
			}	
			else
				du.mostrarMensaje(res.substr(2,res.length -1),titulo,4,null,null,global.iAlert);		
		}
		
		public function terminarEfecto(event:EffectEvent):void{
			closeEffect.removeEventListener(EffectEvent.EFFECT_END, terminarEfecto);
			PopUpManager.removePopUp(this);
		}
		
		public function validaDatosProd(event:EventTipoProd):void{
			info = event.customProp;
		}
		
		public function validaFinal():void{
			if (info.guarda)
				guardaTipoProd();
			else
				du.mostrarMensaje("Debe capturar los datos requeridos",titulo,4,null,null,global.iAlert);
		}
		
		]]>
	</mx:Script>
	<mx:Canvas x="10" y="10" width="338" height="80" styleName="canvasMod">
		<mx:Label id="lblCodigo" x="36.75" y="12" text="C贸digo:"/>
		<mx:Label id="lblNombre" x="36.75" y="44" text="Nombre:"/>
		<mx:TextInput id="txtCodigo" x="85.75" y="10" width="50" maxChars="2" editable="false"/>
		<mx:TextInput id="txtNombre" x="85.75" y="42" width="213.5" maxChars="50"/>
	</mx:Canvas>
	<mx:Button id="btnAceptar" x="260" y="98" icon="@Embed(source='assets/button_ok.png')" click="enviar()" width="40"/>
	<mx:Button id="btnCancelar" x="308" y="98" icon="@Embed(source='assets/Icon-Delete.png')" click="cerrar()" width="40"/>
</mx:TitleWindow>