		<mx:Canvas x="540" y="217" width="205" height="37" cornerRadius="10" borderStyle="solid" borderColor="#7B8B93" visible="true">
			<mx:Button id="btnAgregarSup" x="106" y="3" icon="@Embed(source='assets/add.png')" enabled="false" click="mostrarFormSup(1)" toolTip="Agregar Suplemento" width="40"/>
			<mx:Button id="btnEliminarSup" x="154" y="3" icon="@Embed(source='assets/delete-icon.png')" enabled="false" click="eliminarSup()" toolTip="Eliminar Suplemento" width="40"/>
			<mx:Button id="btnEditarSup" x="58" y="3" icon="@Embed(source='assets/edit.png')" enabled="false" click="mostrarFormSup(2)" toolTip="Editar Suplemento" width="40"/>
