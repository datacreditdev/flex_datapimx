				du.sCursor();
					
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlSolic = new XML(evt.result);
					
					du.rCursor();
					du.closeWs(wsCat);
					
					if (_xmlSolic.elements().length() > 0){
						if(_xmlSolic.Table[0].SITUACION == 'S'){
							if(currentState == null){
								if(_xmlSolic.Table[0].BLOQUEO == 'S'){
									bandMod = false;
									du.mostrarMensaje("No es posible modificar la solicitud debido a que se encuentra\nbloqueada.",titulo,4,null,null,global.iAlert);
								}
								else
									btnBloquearSolic.visible = true;
							}
							else if(currentState == 'evaluacion'){
								if(_xmlSolic.Table[0].BLOQUEO == 'S'){
									btnBloquearSolic.visible = true;
									btnBloquearSolic.label = "Desbloquear Solicitud";
									btnBloquearAcred.x = 446;
								}	
								
								du.initWsCat(wsCat);
								du.sCursor();
					
								du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
									_xmlAcred = new XML(evt.result);
									
									du.rCursor();
									du.closeWs(wsCat);
									
									if(_xmlAcred.elements().length() > 0)
										if(_xmlAcred.Table[0].BLOQUEO == "S")
											btnBloquearAcred.visible = true;
									
								});
								params[0] = cdgAcred;
								//Consulta la tabla de acreditado para verificar su situación
								wsCat.getInfoAcred.send(1, params);
							}
						}
						//SI LA SOLICITUD FUE RECHAZADA NO PERMITE MODIFICAR EL REGISTRO
						else if(_xmlSolic.Table[0].SITUACION == 'R'){
							bandMod = false;
							du.mostrarMensaje("No es posible modificar la información. La solicitud ya fue\nRechazada.",titulo,4,null,null,global.iAlert);
						}
						//SI LA SOLICITUD FUE AUTORIZADA NO ES POSIBLE EDITARLA
						else if(_xmlSolic.Table[0].SITUACION == 'A'){
							du.initWsCat(wsCat);
							du.sCursor();
					
							du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
								_xmlCred = new XML(evt.result);
								
								du.rCursor();
								du.closeWs(wsCat);
								
								if(_xmlCred.elements().length() == 0){
									bandMod = false;
									du.mostrarMensaje("No es posible modificar la información. La solicitud ya fue\nAutorizada.",titulo,4,null,null,global.iAlert);
								}
								else{
									if(currentState == null){
										bandMod = false;
										du.mostrarMensaje("No es posible modificar la información. La solicitud ya fue\nAutorizada.",titulo,4,null,null,global.iAlert);	
									}
								}
							});
							params[0] = cdgAcred;
							params[1] = ciclo;
							params[2] = "";
							//Consulta la tabla de credito para verificar que la situacion se ha autorizado
							wsCat.getInfoAcred.send(22, params);
						}
						llenaRegistros();
					}
					else
						du.mostrarMensaje("Error en la carga de Datos", titulo, 4, null, null, global.iAlert);
				});
				params[0] = cdgAcred;
				params[1] = ciclo;
				wsCat.getInfoAcred.send(8, params);
			}
			
