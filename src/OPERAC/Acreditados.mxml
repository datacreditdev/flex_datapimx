			}
			
			//FUNCION QUE SE ENCARGA DE BUSCAR LOS REGISTROS QUE COINCIDEN CON LOS CRITERIOS 
			//DE BUSQUEDA SELECCIONADOS
			public function buscarAcred():void{
				var wsCat:WebService = new WebService;
				var params:Array = new Array;
				
				btnBuscar.setFocus();
				dgAcred.dataProvider = null;
				
				du.initWsCat(wsCat);
				du.sCursor();
				global.bloquear();
				
				du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
					_xmlAcred = new XML(evt.result);
					
					du.rCursor();
					du.closeWs(wsCat);
					global.desbloquear();
					
					if (_xmlAcred.elements().length() > 0){
						dgAcred.dataProvider = _xmlAcred.Table;
					}
					seleccionaAcred(); 	
				});
				params[0] = global.obtenerUsuario();
				params[1] = txtCodAcred.text;
				params[2] = txtNombre.text;
				params[3] = txtPaterno.text;
				wsCat.getInfoAcred.send(9, params);
			}

			public function eliminarAcred(event:MouseEvent):void{
				var fechaBaja:String = comMttoFecha.dtfFecha.text;
				PopUpManager.removePopUp(comMttoFecha);  
				var acred:String = dgAcred.selectedItem.CODIGO;
				initConexion();
				du.sCursor();
				global.bloquear();
				wsMS.addEventListener(ResultEvent.RESULT, setEliminaAcred);
			}
			
			public function iniVar():void{
				this.indAcred = -1;
				this.vScroll = undefined;
			}
			
			public function initApp():void{
				global = new Globales();
				permiso = new Permisos();
				wsMS = new WebService();
				titulo = "Mantenimiento de Acreditado";
				du = new Utils();
				alta = false;
				borrado = false;
				consulta = false;
				edicion = false;
				permisos();
			}
			
			public function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
				wsMS.loadWSDL();
			}			
			
			public function limpiarContAcred():void{
				txtCodAcred.text = "";
				txtPaterno.text = "";
				txtNombre.text = "";
			}
			
			public function manejadorEliminarAcred(e:CloseEvent):void{
				if(e.detail == Alert.YES){
					var acred:String = dgAcred.selectedItem.CODIGO;
			    	initConexion();
			    	du.sCursor();
					global.bloquear();
					wsMS.addEventListener(ResultEvent.RESULT, setEliminaAcred);
					//wsMS.setEliminaAcred.send(global.obtenerUsuario(), grupo, acred);
			    } 
			}
			
			public function mostrarAltaAcred():void{
				comMttoAgrega = new MttoAgregaAcred();
				comMttoAgrega = MttoAgregaAcred(PopUpManager.createPopUp(this,MttoAgregaAcred,true));
				comMttoAgrega.btnAceptar.addEventListener(MouseEvent.CLICK, agregarAcred); 
				PopUpManager.centerPopUp(comMttoAgrega);		
			}
			
			public function mostrarBaja():void{
				var indice:int = dgAcred.selectedIndex;
				var fec:Date;
				
				if (this._xmlAcred.Table[indice].ESTATUS != "Baja"){	
					comMttoFecha = new MttoSelFecha();
					comMttoFecha = MttoSelFecha(PopUpManager.createPopUp(this,MttoSelFecha,true));
					comMttoFecha.title = "Fecha de Baja";
					comMttoFecha.lblFecha.text="Fecha de Baja del Cliente"; 
					fec = global.obtenerFechaSistema();
					comMttoFecha.fechaMin = new Date(fec.fullYear,fec.month,fec.date - 1);
					comMttoFecha.fechaMax = new Date(fec.fullYear,fec.month,fec.date - 1);
					comMttoFecha.edita = false;
					//PARAMETRO IGUAL A 1 PERMITE OMITIR EL DATO
					comMttoFecha.init(1);
					comMttoFecha.btnAceptar.addEventListener(MouseEvent.CLICK, eliminarAcred);
					PopUpManager.centerPopUp(comMttoFecha);	
				}
				else
					du.mostrarMensaje("El cliente ya está dado de baja",titulo, 4,null,null,global.iInfo);
			}
			
			public function mostrarFormAcred(tipo:int):void{
				//tipo = 1 NUEVO REGISTRO
				//tipo = 2 MODIFICA REGISTRO
				var comMttoAcredInd:MttoAcreditadoInd = new MttoAcreditadoInd();
				switch(tipo){
					case 1: 
						comMttoAcredInd = MttoAcreditadoInd(PopUpManager.createPopUp(this,MttoAcreditadoInd,true)); 
						PopUpManager.centerPopUp(comMttoAcredInd);
						comMttoAcredInd.addEventListener(Event.REMOVED_FROM_STAGE, actualizarAcred);
						comMttoAcredInd.registraInfoAcred();
						break;
					case 2: 
						if (dgAcred.selectedIndex >= 0){
							accionAcred = tipo;
							comMttoAcredInd = MttoAcreditadoInd(PopUpManager.createPopUp(this,MttoAcreditadoInd,true)); 
							PopUpManager.centerPopUp(comMttoAcredInd);
							var indice:int = dgAcred.selectedIndex;
							iniVar();
							this.indAcred = indice;
							this.vScroll = dgAcred.verticalScrollPosition;
							var acred:String = dgAcred.selectedItem.CODIGO;
							comMttoAcredInd.addEventListener(Event.REMOVED_FROM_STAGE, actualizarAcred);
							comMttoAcredInd.cargaInfoAcred(acred);
						}
						else
							du.mostrarMensaje("Debe seleccionar el registro de Acreditado",titulo,4,null,null,global.iAlert);
					break;
				}
			}
			
			public function permisos():void{
				var ws:WebService = new WebService;
				var mod_id:String = global.obtenerModulo();
				var perfil_id:String = global.obtenerCadPerfil();
				var Params:Array;
				var cont:int;

				du.initWs(ws);
				du.sCursor();
					
				du.ejecutaWsMethod(ws,function(evt:ResultEvent):void {											
					dPermisos = new XML(evt.result.toString());
					
					du.rCursor();
					du.closeWs(ws);
						
					cont = dPermisos.elements().length();
					
					for(var i:int = 0; i < cont; i++){
						switch(dPermisos.Table[i].OPCION.toString()){
							case "C":
								consulta = true;
								/*if (permiso.permisosModAcredInd(global.obtenerArrayPerfil())){
									borrado = true;
									alta = true;
									edicion = true;
								}*/
								break;	
							case "B":
								borrado = true;
								break;
							case "I":
								alta = true;
								break;
							case "E":
								edicion = true;
								break;
						}
					}
					btnAgregar.enabled = alta;				
				});
				Params = new Array();
				Params[0] = perfil_id;
				Params[1] = mod_id;
				ws.ESLoginMethods.send(14,Params);	//Método que indica las opciones disponibles para el usuario	
			}
			
			public function seleccionaAcred():void{
				if (dgAcred.selectedIndex >= 0){
					activarContModAcred(true);
				}
				else{
					activarContModAcred(false);
				}
			}
			
			private function setEliminaAcred(event:ResultEvent):void{
				wsMS.disconnect();
				du.rCursor();
				global.desbloquear();
				wsMS.removeEventListener(ResultEvent.RESULT, setEliminaAcred);
				var res:String = new String(event.result.toString());
			}
			
		]]>
