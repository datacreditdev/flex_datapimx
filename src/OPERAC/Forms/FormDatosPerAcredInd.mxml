			<mx:RemoveChild target="{fiel}"/>
			<mx:AddChild relativeTo="{fecha}" position="before" target="{fiel}"/>
			<mx:RemoveChild target="{tel1}"/>
			<mx:RemoveChild target="{tel2}"/>
			<mx:RemoveChild target="{email1}"/>
			<mx:RemoveChild target="{correo2}"/>
