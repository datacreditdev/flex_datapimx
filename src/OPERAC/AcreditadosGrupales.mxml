			}
			
			public function manejadorEliminarAcred(e:CloseEvent):void{
				if(e.detail==Alert.YES){
					var indGr:int = dgGrupos.selectedIndex;
					var indAc:int = dgAcred.selectedIndex;
					var grupo:String = _xmlGrupos.Table[indGr].CODIGO;  
					var acred:String = _xmlAcred.Table[indAc].CODIGO;
			    	initConexion();
					du.sCursor();
					global.bloquear();
					wsMS.addEventListener(ResultEvent.RESULT, setEliminaAcred);
					wsMS.setEliminaAcred.send(global.obtenerUsuario(), grupo, acred);
			    } 
			}
			
			public function manejadorEliminarGrupo(e:CloseEvent):void{
				if(e.detail==Alert.YES){
