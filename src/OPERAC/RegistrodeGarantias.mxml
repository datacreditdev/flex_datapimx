			}			
			
			public function mostrarFormGarantia(tipo:int):void{
				//tipo = 1 NUEVO REGISTRO
				//tipo = 2 MODIFICA REGISTRO
				var acred:String;
				var nomAcred:String;
				var coord:String;
				var nomCoord:String;
				var promotor:String;
				var munic:String;
				var indAcred:int;
				var ciclo:String;
				if(edicion == true){
					var comMttoGtia:MttoGarantia = new MttoGarantia();
					//indAcred = dgAcred.selectedIndex;
					acred = dgAcred.selectedItem.CODIGO;
					nomAcred = dgAcred.selectedItem.NOMBRE_CL;
					coord = dgAcred.selectedItem.CDGCO;
					nomCoord = dgAcred.selectedItem.NOMCO;
					promotor = dgAcred.selectedItem.CDGPRPE;
					munic = dgAcred.selectedItem.MUNIC;
					switch(tipo){
						case 1:
							comMttoGtia = MttoGarantia(PopUpManager.createPopUp(this,MttoGarantia,true));  
							comMttoGtia.addEventListener(Event.REMOVED_FROM_STAGE, actualizarGarantia);
							PopUpManager.centerPopUp(comMttoGtia);
							comMttoGtia.init(acred, nomAcred, tipo);
							break;
						case 2: 
							if (dgGarantia.selectedIndex >= 0){
								accionGarantia = tipo;					
								comMttoGtia = MttoGarantia(PopUpManager.createPopUp(this,MttoGarantia,true));  
								comMttoGtia.addEventListener(Event.REMOVED_FROM_STAGE, actualizarGarantia);
								PopUpManager.centerPopUp(comMttoGtia);
								iniVar();
								this.vScroll = dgGarantia.verticalScrollPosition;		
								this.indGarantia = dgGarantia.selectedIndex;
								ciclo = dgGarantia.selectedItem.CICLO;
								comMttoGtia.init(acred, nomAcred, tipo);
							}
							else
								Alert.show("Debe seleccionar el registro de Solicitud","Mantenimiento de Solicitud",4,null,null,global.iAlert); 
							break;
					}
				}
			}
			
			public function permisos():void{
				var mod_id:String = global.obtenerModulo();
				var perfil_id:String = global.obtenerCadPerfil();
				var Params:Array;
				var i:int;
				var cont:int;
			
				initConexion();
				du.sCursor();
					
				du.ejecutaWsMethod(wsMS,function(evt:ResultEvent):void {											
					dPermisos = new XML(evt.result.toString());
						
					cont = dPermisos.elements().length();
					
					for(i = 0; i < cont; i++)
					{
						switch(dPermisos.Table[i].OPCION.toString())
						{
							case "C":
								consulta = true;
								break;	
							case "B":
								borrado = true;
								break;
							case "I":
								alta = true;
								break;
							case "E":
								edicion = true;
								break;
						}
					}
					du.rCursor();
					du.closeWs(wsMS);					
				});
				Params = new Array();
				Params[0] = perfil_id;
				Params[1] = mod_id;
				wsMS.ESLoginMethods.send(14,Params);	//MÃ©todo que indica las opciones disponibles para el usuario	
			}		
			
			public function seleccionaAcred():void{
				dgGarantia.dataProvider = null;
				if (dgAcred.selectedIndex >= 0){
					activarContGarantia(true);
				}
				else{
					activarContGarantia(false);
				}
			}
			
			public function seleccionaGarantia():void{
				if (dgGarantia.selectedIndex >= 0)
					activarContModGarantia(true);
				else
					activarContModGarantia(false);
			}
			
