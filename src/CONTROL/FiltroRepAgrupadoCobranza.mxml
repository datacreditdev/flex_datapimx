<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" 
	backgroundAlpha="1.0" backgroundColor="#FFFFFF" creationPolicy="all" 
	creationComplete="initApp()">
	<mx:states>
		<mx:State name="asesor">
			<mx:SetProperty target="{rdbSupervisor}" name="x" value="10.25"/>
			<mx:SetProperty target="{rdbCoord}" name="x" value="95.75"/>
			<mx:AddChild relativeTo="{canvas3}" position="lastChild">
				<mx:RadioButton x="192.75" y="5" id="rdbAsesor" label="Asesor" groupName="nivel" value="2"/>
			</mx:AddChild>
		</mx:State>
	</mx:states>
	
	<mx:Script>
		<![CDATA[
			import mx.events.IndexChangedEvent;
			import mx.collections.ArrayCollection;
			import Data.Globales;
			import Data.Utils;
			import mx.core.Application;
			import mx.containers.TitleWindow;	
			import mx.validators.Validator;	
			import mx.managers.PopUpManager;
			import mx.controls.Alert;
			import mx.effects.easing.Elastic;
			import mx.rpc.soap.WebService;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.utils.ObjectUtil;
		
			[Bindable]
			private var _xmlCoord:XMLList =  new XMLList();
			[Bindable]
			private var _xmlSup:XML =  new XML();
			
			public var coordObj:ArrayCollection = new ArrayCollection();
			public var supObj:ArrayCollection = new ArrayCollection();
			
			public var wsMS:WebService;
			public var rep:String;
			private var du:Utils;
			private var global:Globales;
			
			public function agregaInicial(codigo:String, texto:String):Object{
				var oItem:Object = new Object();
				oItem.codigo = codigo;	
				oItem.nombre = texto;
				return oItem;
			}		
			
			public function cargaSupervisor(coord:String):void{	
				if(coord == ""){
					var wsCat:WebService = new WebService;
					var params:Array = new Array;
					
					du.initWsCat(wsCat);
					du.sCursor();
								
					du.ejecutaWsMethod(wsCat,function(evt:ResultEvent):void {											
						_xmlSup = new XML(evt.result.toString());
						
						du.rCursor();
						du.closeWs(wsCat);
								
						supObj.removeAll();
						supObj.refresh();
						supObj.addItem(agregaInicial("000000", "--Todos--"))	
						formateaSupervisor();
					});
					wsCat.getCatalogoGral.send(41);
				}			
				if(coord != ""){
					var cont:int = supObj.length;
					for(var i:int = 0; i < cont; i++){
						if(supObj[i].codigo.toString() == coord)
							cboSupervisor.selectedIndex = i;
					}
				}
			}		
			
			public function cargaCoord(sup:String):void{
				if(sup == "" || sup == "000000")
					_xmlCoord = XMLList(Application.application._xmlSuc.Table);
				else
					_xmlCoord = Application.application._xmlSuc.Table.(child("TELEFONO").toString().toLowerCase() == cboSupervisor.selectedItem.codigo.toString().toLowerCase());
			
				coordObj.removeAll();
				coordObj.refresh();	
				coordObj.addItem(agregaInicial("000", "--Todas--"))
				
				cboCoord.enabled = true;	
				if(_xmlCoord.length() > 0)
					formateaCoord();
			}			
			
			public function exportar():void{
				switch(rep){
					case "16":
						var myClass:Class = flash.utils.getDefinitionByName("REPORTES.AnalisisdeCobranzaDet") as Class;	
						var myComponent:* = new myClass();
						Application.application.MainWindow.removeAllChildren();		
						Application.application.MainWindow.addChild(myComponent);
						myComponent.init(lblTitulo.text, rep, dtfFecha.text, nivel.selectedValue.toString(), global.obtenerUsuario(),
										 cboCoord.selectedItem.codigo, "000000", cboSupervisor.selectedItem.codigo, tipoCart.selectedValue.toString());				
						break;
				}
			}				
					
			public function formateaSupervisor():void{
				var cont:int = _xmlSup.elements().length();
				var oItem:Object;
				
				for(var i:int = 0; i < cont; i++){
					oItem = new Object();
					oItem.codigo = _xmlSup.Table[i].CODIGO;
					oItem.nombre = _xmlSup.Table[i].NOMBREC;
					supObj.addItem(oItem);
				}
			}			
						
			public function formateaCoord():void{
				var cont:int = _xmlCoord.length();
				var oItem:Object;
				
				for(var i:int = 0; i < cont; i++){
					oItem = new Object();
					oItem.codigo = _xmlCoord.CODIGO[i].toString();
					oItem.nombre = _xmlCoord.NOMBRE[i].toString();
					coordObj.addItem(oItem);
				}
			}			
			
			public function generar():void{
				if (valida()){					
					var consulta:String;
					var id:String = "&id=" + rep;
					var fecha:String = "&fecha=" + global.formatearFechaSep(dtfFecha.selectedDate, "-");
					var niv:String = "&nivel=" + nivel.selectedValue.toString();
					var usuario:String = "&usuario=" + global.obtenerUsuario();
					var nomUsuario:String = "&nomUsuario=" + Application.application.NOM_U_ID;
					var coord:String = "&coord=" + cboCoord.selectedItem.codigo;
					var asesor:String = "&asesor=000000";
					var supervisor:String = "&supervisor=" + cboSupervisor.selectedItem.codigo;
					var cartera:String = "&tipoCart=" + tipoCart.selectedValue.toString(); 
					
					//if(currentState == null)
					consulta = global.urlPdf + id + fecha + niv + cartera + usuario + nomUsuario + coord + asesor + supervisor;					
					Application.application.muestraPdf(consulta);
					//du.mostrarMensaje(consulta);
				}			
			}
						
			public function init(rep:String, titulo:String, estado:String, exporta:Boolean):void{
				this.rep = rep;
				lblTitulo.text = titulo;
				currentState = estado;
				limpiar();
				if (exporta == false)
					this.removeChild(btnExportar);
			}		
						
			public function initApp():void{
				global = new Globales();
				du = new Utils();
			}		
			
			public function initConexion():void{				
				wsMS = new WebService();			
				wsMS.wsdl = Application.application.wsStr.wsdlServ.toString();
				wsMS.loadWSDL();
			}	
		
			public function limpiar():void{
				var fec:Date;
				cboCoord.enabled = true;
				cboSupervisor.enabled = true;
				cargaSupervisor("");
				cargaCoord("");		
//				supObj.removeAll();
//				supObj.refresh();
//				supObj.addItem(agregaInicial("000000", "--Todos--"));
				cboSupervisor.dataProvider = supObj;
/* 				coordObj.removeAll();
				coordObj.refresh();
				coordObj.addItem(agregaInicial("000", "--Todas--")); */
				cboCoord.dataProvider = coordObj;
				fec = global.obtenerFechaSistema();
				if(currentState == null)
					dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date));
				if(currentState == 'asesor')
					dtfFecha.selectedDate = global.seleccionarDiaHabil(new Date(fec.fullYear,fec.month,fec.date - 1));
				nivel.selectedValue = 0;
			}
				
			public function selCoord():void{
				if(cboCoord.selectedItem.codigo.toString() != "000"){
					var xmlListCoord:XMLList = Application.application._xmlSuc.Table.(CODIGO.toString().toLowerCase() == cboCoord.selectedItem.codigo.toString().toLowerCase());
					var coord:String = xmlListCoord.TELEFONO[0].toString();
					cargaSupervisor(coord);
				}
			}	
			
			public function selSupervisor():void{
				cargaCoord(cboSupervisor.selectedItem.codigo);
			}
				
			public function valida():Boolean{
				if(nivel.selection == null){
					du.mostrarMensaje("Seleccione el nivel de detalle del reporte.","Reporte",4,null,null,global.iAlert);
					return false;
				}
				if(tipoCart.selection == null){
					du.mostrarMensaje("Seleccione el tipo de cartera del reporte.","Reporte",4,null,null,global.iAlert);
					return false;
				}
				return true;
			}
		]]>
	</mx:Script>
	
