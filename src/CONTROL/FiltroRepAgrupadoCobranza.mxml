		<mx:RadioButtonGroup id="nivel"/>
		<mx:RadioButton id="rdbSupervisor" x="30.25" y="5" label="Supervisor" groupName="nivel" value="0"/>
		<mx:RadioButton id="rdbCoord" x="143.75" y="5" label="Sucursal" groupName="nivel" value="1"/>
	</mx:Canvas>
	<mx:Label id="lblTitulo" x="18" y="10" width="247" fontSize="12" fontWeight="bold" fontStyle="italic"/>
	<mx:Canvas x="17.95" y="53.5" width="264.05" height="120.5" styleName="canvasMod" id="canvas2">
		<mx:ComboBox id="cboCoord" x="10" y="80" labelField="nombre" change="selCoord()" width="170"/>
		<mx:ComboBox id="cboSupervisor" x="10" y="27.5" labelField="nombre" change="selSupervisor()" width="242.05"/>
