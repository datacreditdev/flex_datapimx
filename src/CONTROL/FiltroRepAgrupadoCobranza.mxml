	<mx:Button x="63.25" y="371" label="Generar" click="generar()" id="btnGenerar"/>
	<mx:Button x="157.75" y="371" label="Limpiar" width="71" height="24" click="limpiar()" id="btnLimpiar"/>
	<mx:Button x="109" y="405" label="Exportar" width="74" id="btnExportar" click="exportar()"/>
	<mx:Label x="18" y="34" text="Criterios de Selección" width="124.25" id="lblCriterios"/>
